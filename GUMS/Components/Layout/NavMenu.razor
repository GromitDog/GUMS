@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="">
            <img src="/UnitLogowhite.png" alt="Girl Guiding Unit Logo" class="unit-logo" />
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Register">
                <span class="bi bi-people-fill" aria-hidden="true"></span> Member Register
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Meetings">
                <span class="bi bi-calendar-week" aria-hidden="true"></span> Meetings
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Meetings/Alerts">
                <span class="bi bi-exclamation-triangle" aria-hidden="true"></span> Attendance Alerts
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Configuration/Terms">
                <span class="bi bi-calendar-event" aria-hidden="true"></span> Term Dates
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Configuration/Settings">
                <span class="bi bi-gear" aria-hidden="true"></span> Unit Settings
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Logout">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>