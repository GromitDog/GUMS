@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="">
            <img src="/UnitLogowhite.png" alt="Girl Guiding Unit Logo" class="unit-logo" />
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="if(event.target.closest('a.nav-link')) document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Register">
                <span class="bi bi-people-fill" aria-hidden="true"></span> Member Register
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Meetings">
                <span class="bi bi-calendar-week" aria-hidden="true"></span> Meetings
            </NavLink>
        </div>

        <!-- Finance Section (Expandable) -->
        <div class="nav-item px-3">
            <div class="nav-link nav-group-toggle @(_financeExpanded ? "expanded" : "")" @onclick="ToggleFinance" @onclick:stopPropagation="true">
                <span class="bi bi-currency-pound" aria-hidden="true"></span> Finance
                <span class="bi @(_financeExpanded ? "bi-chevron-down" : "bi-chevron-right") nav-chevron" aria-hidden="true"></span>
            </div>
            @if (_financeExpanded)
            {
                <div class="nav-group-items">
                    <NavLink class="nav-link nav-link-sub" href="Payments">
                        <span class="bi bi-cash-coin" aria-hidden="true"></span> Payments
                    </NavLink>
                    <NavLink class="nav-link nav-link-sub" href="Accounts">
                        <span class="bi bi-wallet2" aria-hidden="true"></span> Accounts
                    </NavLink>
                </div>
            }
        </div>

        <!-- Reports Section (Expandable) -->
        <div class="nav-item px-3">
            <div class="nav-link nav-group-toggle @(_reportsExpanded ? "expanded" : "")" @onclick="ToggleReports" @onclick:stopPropagation="true">
                <span class="bi bi-file-earmark-bar-graph" aria-hidden="true"></span> Reports
                <span class="bi @(_reportsExpanded ? "bi-chevron-down" : "bi-chevron-right") nav-chevron" aria-hidden="true"></span>
            </div>
            @if (_reportsExpanded)
            {
                <div class="nav-group-items">
                    <NavLink class="nav-link nav-link-sub" href="Reports/NightsAway">
                        <span class="bi bi-moon-stars" aria-hidden="true"></span> Nights Away
                    </NavLink>
                </div>
            }
        </div>

        <!-- Configuration Section (Expandable) -->
        <div class="nav-item px-3">
            <div class="nav-link nav-group-toggle @(_configExpanded ? "expanded" : "")" @onclick="ToggleConfig" @onclick:stopPropagation="true">
                <span class="bi bi-gear" aria-hidden="true"></span> Configuration
                <span class="bi @(_configExpanded ? "bi-chevron-down" : "bi-chevron-right") nav-chevron" aria-hidden="true"></span>
            </div>
            @if (_configExpanded)
            {
                <div class="nav-group-items">
                    <NavLink class="nav-link nav-link-sub" href="Configuration/Terms">
                        <span class="bi bi-calendar-event" aria-hidden="true"></span> Term Dates
                    </NavLink>
                    <NavLink class="nav-link nav-link-sub" href="Configuration/Settings">
                        <span class="bi bi-sliders" aria-hidden="true"></span> Unit Settings
                    </NavLink>
                </div>
            }
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Logout">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool _financeExpanded = false;
    private bool _reportsExpanded = false;
    private bool _configExpanded = false;

    private void ToggleFinance()
    {
        _financeExpanded = !_financeExpanded;
    }

    private void ToggleReports()
    {
        _reportsExpanded = !_reportsExpanded;
    }

    private void ToggleConfig()
    {
        _configExpanded = !_configExpanded;
    }
}