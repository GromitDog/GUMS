@page "/Accounts/BudgetComparison/{MeetingId:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Budget vs Actual - GUMS</PageTitle>

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Accounts">Accounts</a></li>
            <li class="breadcrumb-item active">Budget vs Actual</li>
        </ol>
    </nav>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (_comparison == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-info-circle"></i> No budget found for this event.
            <a href="/Accounts/EventBudget/@MeetingId">Create a budget</a> to enable comparison.
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@_comparison.MeetingTitle - Budget vs Actual</h2>
            <div>
                <a href="/Accounts/EventBudget/@MeetingId" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil"></i> Edit Budget
                </a>
                <a href="/Meetings/View/@MeetingId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Meeting
                </a>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Budgeted (Mid)</h6>
                        <h2 class="text-primary">@_comparison.TotalBudgeted.ToString("C")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Actual Spend</h6>
                        <h2 class="text-danger">@_comparison.TotalActual.ToString("C")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 @(_comparison.TotalVariance >= 0 ? "border-success" : "border-danger")">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Variance</h6>
                        <h2 class="@(_comparison.TotalVariance >= 0 ? "text-success" : "text-danger")">
                            @_comparison.TotalVariance.ToString("C")
                        </h2>
                        <small class="text-muted">
                            @(_comparison.TotalVariance >= 0 ? "Under budget" : "Over budget")
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Breakdown Table -->
        <div class="card">
            <div class="card-header" style="background-color: var(--gg-primary-blue); color: white;">
                <h5 class="mb-0"><i class="bi bi-table"></i> Breakdown by Category</h5>
            </div>
            <div class="card-body">
                @if (!_comparison.Lines.Any())
                {
                    <p class="text-muted text-center py-3">No budget or expense data available.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th class="text-end">Budgeted</th>
                                    <th class="text-end">Actual</th>
                                    <th class="text-end">Variance</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in _comparison.Lines)
                                {
                                    <tr class="@(line.Variance < 0 ? "table-danger" : "")">
                                        <td>@line.Category</td>
                                        <td class="text-end">@line.Budgeted.ToString("C")</td>
                                        <td class="text-end">@line.Actual.ToString("C")</td>
                                        <td class="text-end">
                                            <span class="@(line.Variance >= 0 ? "text-success" : "text-danger")">
                                                @line.Variance.ToString("C")
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light fw-bold">
                                    <td>Total</td>
                                    <td class="text-end">@_comparison.TotalBudgeted.ToString("C")</td>
                                    <td class="text-end">@_comparison.TotalActual.ToString("C")</td>
                                    <td class="text-end">
                                        <span class="@(_comparison.TotalVariance >= 0 ? "text-success" : "text-danger")">
                                            @_comparison.TotalVariance.ToString("C")
                                        </span>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>
