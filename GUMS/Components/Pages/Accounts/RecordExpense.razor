@page "/Accounts/RecordExpense"
@using GUMS.Data.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Record Expense - GUMS</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Record Expense</h2>
        <a href="/Accounts/Expenses" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Expenses
        </a>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @_errorMessage
            <button type="button" class="btn-close" @onclick="() => _errorMessage = string.Empty"></button>
        </div>
    }

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <!-- Type Toggle -->
        <div class="btn-group mb-4 w-100" role="group">
            <button type="button" class="btn @(_expenseType == "direct" ? "btn-primary" : "btn-outline-primary")" @onclick='() => _expenseType = "direct"'>
                <i class="bi bi-wallet2"></i> Direct Expense
            </button>
            <button type="button" class="btn @(_expenseType == "claim" ? "btn-primary" : "btn-outline-primary")" @onclick='() => _expenseType = "claim"'>
                <i class="bi bi-receipt"></i> Add to Reimbursement Claim
            </button>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header" style="background-color: var(--gg-primary-blue); color: white;">
                        <h5 class="mb-0">
                            @if (_expenseType == "direct")
                            {
                                <i class="bi bi-wallet2"></i> <text>Direct Expense</text>
                            }
                            else
                            {
                                <i class="bi bi-receipt"></i> <text>Reimbursement Expense</text>
                            }
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (_expenseType == "claim")
                        {
                            <div class="mb-3">
                                <label class="form-label">Expense Claim</label>
                                <select class="form-select" @bind="_selectedClaimId">
                                    <option value="0">-- Create New Claim --</option>
                                    @foreach (var claim in _draftClaims)
                                    {
                                        <option value="@claim.Id">@claim.ClaimedBy - @claim.SubmittedDate.ToString("dd MMM yyyy") (@claim.Expenses.Count items, @claim.TotalAmount.ToString("C"))</option>
                                    }
                                </select>
                            </div>

                            @if (_selectedClaimId == 0)
                            {
                                <div class="mb-3">
                                    <label class="form-label">Claimed By <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" @bind="_newClaimName" placeholder="Leader name" />
                                </div>
                            }
                        }

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" @bind="_formDate" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Amount <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">Â£</span>
                                    <input type="number" class="form-control" @bind="_formAmount" step="0.01" min="0.01" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Category <span class="text-danger">*</span></label>
                            <select class="form-select" @bind="_formCategoryId">
                                <option value="0">-- Select Category --</option>
                                @foreach (var account in _expenseAccounts)
                                {
                                    <option value="@account.Id">@account.Name</option>
                                }
                            </select>
                        </div>

                        @if (_expenseType == "direct")
                        {
                            <div class="mb-3">
                                <label class="form-label">Paid From <span class="text-danger">*</span></label>
                                <select class="form-select" @bind="_formPaidFromId">
                                    <option value="0">-- Select Account --</option>
                                    @foreach (var account in _assetAccounts)
                                    {
                                        <option value="@account.Id">@account.Name (@account.Balance.ToString("C"))</option>
                                    }
                                </select>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Description <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" @bind="_formDescription" placeholder="What was purchased" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Reference</label>
                            <input type="text" class="form-control" @bind="_formReference" placeholder="Receipt/invoice number (optional)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Link to Event</label>
                            <select class="form-select" @bind="_formMeetingId">
                                <option value="0">-- None --</option>
                                @foreach (var meeting in _meetings)
                                {
                                    <option value="@meeting.Id">@meeting.Title (@meeting.Date.ToString("dd MMM yyyy"))</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Notes</label>
                            <textarea class="form-control" @bind="_formNotes" rows="2" placeholder="Optional notes..."></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Accounts/Expenses" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button class="btn btn-primary" @onclick="SubmitExpense" disabled="@(_isSubmitting || !IsFormValid())">
                                @if (_isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="bi bi-check-circle"></i> Record Expense
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h6><i class="bi bi-info-circle"></i> About Expense Types</h6>
                        <hr />
                        <p><strong>Direct Expense</strong></p>
                        <p class="text-muted small">For purchases paid directly from unit funds (cash, bank, cheques). Creates an immediate accounting entry.</p>
                        <p><strong>Reimbursement Claim</strong></p>
                        <p class="text-muted small mb-0">For expenses paid by a leader who needs reimbursing. The accounting entry is created when the claim is settled.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
