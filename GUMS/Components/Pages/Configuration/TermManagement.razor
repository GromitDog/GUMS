@page "/Configuration/Terms"
@rendermode InteractiveServer

<PageTitle>Term Dates - GUMS</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Term Dates</h2>
        <button class="btn btn-primary" @onclick="ShowAddForm">
            <i class="bi bi-calendar-plus"></i> Add New Term
        </button>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @_errorMessage
            <button type="button" class="btn-close" @onclick="ClearError"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(_successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @_successMessage
            <button type="button" class="btn-close" @onclick="ClearSuccess"></button>
        </div>
    }

    <!-- Add/Edit Form -->
    @if (_showForm)
    {
        <div class="card mb-4">
            <div class="card-header" style="background-color: var(--gg-primary-blue); color: white;">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-event"></i> @(_editingTerm == null ? "Add New Term" : "Edit Term")
                </h5>
            </div>
            <div class="card-body">
                <EditForm Model="_currentTerm" OnValidSubmit="SaveTerm">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Term Name</label>
                            <InputText class="form-control" @bind-Value="_currentTerm.Name" placeholder="e.g. Autumn 2026" />
                            <ValidationMessage For="@(() => _currentTerm.Name)" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Termly Subscription Amount (£)</label>
                            <InputNumber class="form-control" @bind-Value="_currentTerm.SubsAmount" placeholder="20.00" />
                            <ValidationMessage For="@(() => _currentTerm.SubsAmount)" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Start Date</label>
                            <InputDate class="form-control" @bind-Value="_currentTerm.StartDate" />
                            <ValidationMessage For="@(() => _currentTerm.StartDate)" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">End Date</label>
                            <InputDate class="form-control" @bind-Value="_currentTerm.EndDate" />
                            <ValidationMessage For="@(() => _currentTerm.EndDate)" />
                        </div>
                    </div>

                    <div class="mt-4 d-flex gap-2">
                        <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            <i class="bi bi-save"></i> Save Term
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelForm">
                            Cancel
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    <!-- Terms List -->
    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading terms...</p>
        </div>
    }
    else if (!_allTerms.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No terms have been set up yet. Add your first term to get started with meeting planning!
        </div>
    }
    else
    {
        @if (!_showForm)
        {
            <!-- Current Term Card -->
            <div class="card mb-4" style="border: 2px solid var(--gg-bright-cyan); background-color: #E3F9FF;">
                <div class="card-header" style="background-color: var(--gg-bright-cyan); color: white;">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-check"></i> Current Term
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="mb-2">@_currentTermData?.Name</h4>
                            <p class="mb-1">
                                <strong>Dates:</strong> @_currentTermData?.StartDate.ToString("dd MMM yyyy") - @_currentTermData?.EndDate.ToString("dd MMM yyyy")
                            </p>
                            <p class="mb-0">
                                <strong>Subscription:</strong> £@_currentTermData?.SubsAmount.ToString("F2")
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <button class="btn btn-outline-primary btn-sm me-2" @onclick="() => EditTerm(_currentTermData)">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                            <button class="btn btn-outline-danger btn-sm" @onclick="() => ConfirmDelete(_currentTermData)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (_futureTerms.Any())
        {
            <!-- Future Terms -->
            <div class="card mb-4">
                <div class="card-header" style="background-color: var(--gg-primary-blue); color: white;">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-week"></i> Future Terms (@_futureTerms.Count)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Term Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Subscription</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var term in _futureTerms)
                                {
                                    <tr>
                                        <td><strong>@term.Name</strong></td>
                                        <td>@term.StartDate.ToString("dd MMM yyyy")</td>
                                        <td>@term.EndDate.ToString("dd MMM yyyy")</td>
                                        <td>£@term.SubsAmount.ToString("F2")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" @onclick="() => EditTerm(term)">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                                <button class="btn btn-outline-danger" @onclick="() => ConfirmDelete(term)">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        @if (_pastTerms.Any())
        {
            <!-- Past Terms -->
            <div class="card">
                <div class="card-header" style="background-color: #6c757d; color: white;">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-x"></i> Past Terms (@_pastTerms.Count)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Term Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Subscription</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var term in _pastTerms)
                                {
                                    <tr class="text-muted">
                                        <td>@term.Name</td>
                                        <td>@term.StartDate.ToString("dd MMM yyyy")</td>
                                        <td>@term.EndDate.ToString("dd MMM yyyy")</td>
                                        <td>£@term.SubsAmount.ToString("F2")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" @onclick="() => EditTerm(term)">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                                <button class="btn btn-outline-danger" @onclick="() => ConfirmDelete(term)">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }

    <!-- Delete Confirmation Modal -->
    @if (_showDeleteConfirm)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete the term <strong>@_termToDelete?.Name</strong>?</p>
                        <p class="text-muted">
                            This action cannot be undone. You cannot delete a term that has meetings or payments associated with it.
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelDelete">
                            Cancel
                        </button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteTerm" disabled="@_isDeleting">
                            @if (_isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            <i class="bi bi-trash"></i> Delete Term
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>