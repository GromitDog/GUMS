@page "/Meetings/AddExtra"
@rendermode InteractiveServer

<PageTitle>Add Special Event - GUMS</PageTitle>

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Meetings">Meetings</a></li>
            <li class="breadcrumb-item active">Add Special Event</li>
        </ol>
    </nav>

    <h2 class="mb-4">Add Special Event</h2>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @_errorMessage
            <button type="button" class="btn-close" @onclick="ClearError"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header" style="background-color: var(--gg-bright-cyan); color: white;">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-event"></i> Event Details
                    </h5>
                </div>
                <div class="card-body">
                    <EditForm Model="_meeting" OnValidSubmit="SaveMeeting">
                        <DataAnnotationsValidator />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Start Date</label>
                                <InputDate class="form-control" @bind-Value="_meeting.Date" />
                                <ValidationMessage For="@(() => _meeting.Date)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">End Date (for multi-day events)</label>
                                <InputDate class="form-control" @bind-Value="_meeting.EndDate" />
                                <small class="form-text text-muted">
                                    Leave blank for single-day events.
                                    @if (_meeting.EndDate.HasValue && _meeting.EndDate.Value >= _meeting.Date)
                                    {
                                        var nights = MeetingService.CalculateNightsForMeeting(_meeting.Date, _meeting.EndDate);
                                        @:@(nights > 0 ? $" ({nights} night{(nights != 1 ? "s" : "")} away)" : "")
                                    }
                                </small>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Event Title</label>
                                <InputText class="form-control" @bind-Value="_meeting.Title" placeholder="e.g. Summer Camp, Museum Trip" />
                                <ValidationMessage For="@(() => _meeting.Title)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Start Time</label>
                                <InputDate Type="InputDateType.Time" class="form-control" @bind-Value="_startTime" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">End Time</label>
                                <InputDate Type="InputDateType.Time" class="form-control" @bind-Value="_endTime" />
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Location Name</label>
                                <InputText class="form-control" @bind-Value="_meeting.LocationName" placeholder="e.g. Forest Adventure Centre" />
                                <ValidationMessage For="@(() => _meeting.LocationName)" />
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Location Address (Optional)</label>
                                <InputTextArea class="form-control" @bind-Value="_meeting.LocationAddress" rows="2" placeholder="Full address" />
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Description</label>
                                <InputTextArea class="form-control" @bind-Value="_meeting.Description" rows="3" placeholder="What's happening at this event?" />
                            </div>

                            <!-- Cost Section -->
                            <div class="col-12">
                                <div class="card" style="background-color: #FFF9E6; border-color: #FFE08A;">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="bi bi-currency-pound"></i> Cost Information
                                        </h6>

                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Cost Per Attendee (Â£)</label>
                                                <InputNumber class="form-control" @bind-Value="_meeting.CostPerAttendee"
                                                           placeholder="0.00" step="0.01" />
                                                <small class="text-muted">Leave as 0 if this event is free</small>
                                            </div>

                                            @if (_meeting.CostPerAttendee.HasValue && _meeting.CostPerAttendee.Value > 0)
                                            {
                                                <div class="col-md-6">
                                                    <label class="form-label">Payment Deadline</label>
                                                    <InputDate class="form-control" @bind-Value="_meeting.PaymentDeadline" />
                                                    <small class="text-muted">When payment is due by</small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Activities Section -->
                        <div class="mt-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="mb-0">Activities & Consent Requirements</h6>
                                <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddActivity">
                                    <i class="bi bi-plus-circle"></i> Add Activity
                                </button>
                            </div>

                            @if (_activities.Any())
                            {
                                <div class="alert alert-warning" role="alert">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <strong>Remember:</strong> Activities marked as requiring consent will need parent permission forms!
                                </div>

                                <div class="list-group">
                                    @for (int i = 0; i < _activities.Count; i++)
                                    {
                                        var index = i;
                                        var activity = _activities[i];
                                        <div class="list-group-item @(activity.RequiresConsent ? "border-warning" : "")">
                                            <div class="row g-2 align-items-center">
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control form-control-sm"
                                                           placeholder="Activity name (e.g. Camping Overnight)"
                                                           @bind="activity.Name" />
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox"
                                                               id="consent-@index"
                                                               @bind="activity.RequiresConsent" />
                                                        <label class="form-check-label" for="consent-@index">
                                                            <strong>Requires consent form</strong>
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-md-2 text-end">
                                                    <button type="button" class="btn btn-outline-danger"
                                                            @onclick="() => RemoveActivity(index)"
                                                            title="Remove activity">
                                                        <i class="bi bi-x-lg"></i> Remove
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="row g-2 mt-2">
                                                <div class="col-12">
                                                    <textarea class="form-control form-control-sm"
                                                              rows="2"
                                                              placeholder="Activity notes (optional)"
                                                              @bind="activity.Description"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No activities added yet. Add activities and mark which ones need consent forms.</p>
                            }
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                                @if (_isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="bi bi-save"></i> Save Event
                            </button>
                            <a href="/Meetings" class="btn btn-secondary">Cancel</a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card" style="background-color: #FFF9E6;">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-lightbulb"></i> Special Event Tips
                    </h6>
                    <ul class="mb-0">
                        <li>Use this for camps, trips, and special activities</li>
                        <li>If there's a cost, set the amount and payment deadline</li>
                        <li>Mark activities that need consent forms (overnight stays, travel, etc.)</li>
                        <li>You'll be able to track who's signed up and paid later</li>
                    </ul>
                </div>
            </div>

            <div class="card mt-3" style="background-color: #FFE8E8; border-color: #FFC0C0;">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-shield-check"></i> Consent Forms
                    </h6>
                    <p class="mb-0">
                        Activities marked as requiring consent will be tracked separately.
                        You'll be able to record when parents email confirmation and when physical forms arrive.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
