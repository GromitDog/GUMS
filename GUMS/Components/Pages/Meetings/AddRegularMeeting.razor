@page "/Meetings/AddRegular"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Plan a Meeting - GUMS</PageTitle>

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Meetings">Meetings</a></li>
            <li class="breadcrumb-item active">Plan a Meeting</li>
        </ol>
    </nav>

    <h2 class="mb-4">Plan a Regular Meeting</h2>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @_errorMessage
            <button type="button" class="btn-close" @onclick="ClearError"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header" style="background-color: var(--gg-primary-blue); color: white;">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-plus"></i> Meeting Details
                    </h5>
                </div>
                <div class="card-body">
                    <EditForm Model="_meeting" OnValidSubmit="SaveMeeting">
                        <DataAnnotationsValidator />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Meeting Date</label>
                                <InputDate class="form-control" @bind-Value="_meeting.Date" />
                                <ValidationMessage For="@(() => _meeting.Date)" />
                                @if (_suggestedDates.Any() && !_suggestedDatesUsed)
                                {
                                    <small class="text-muted">
                                        Suggested dates:
                                        @foreach (var date in _suggestedDates.Take(3))
                                        {
                                            <button type="button" class="btn btn-link btn-sm p-0 ms-1" @onclick="() => UseSuggestedDate(date)">
                                                @date.ToString("dd MMM")
                                            </button>
                                        }
                                    </small>
                                }
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Meeting Title</label>
                                <InputText class="form-control" @bind-Value="_meeting.Title" placeholder="e.g. Weekly Meeting" />
                                <ValidationMessage For="@(() => _meeting.Title)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Start Time</label>
                                <InputDate Type="InputDateType.Time" class="form-control" @bind-Value="_startTime" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">End Time</label>
                                <InputDate Type="InputDateType.Time" class="form-control" @bind-Value="_endTime" />
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Location Name</label>
                                <InputText class="form-control" @bind-Value="_meeting.LocationName" placeholder="e.g. Village Hall" />
                                <ValidationMessage For="@(() => _meeting.LocationName)" />
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Location Address (Optional)</label>
                                <InputTextArea class="form-control" @bind-Value="_meeting.LocationAddress" rows="2" placeholder="Full address" />
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Description (Optional)</label>
                                <InputTextArea class="form-control" @bind-Value="_meeting.Description" rows="3" placeholder="Any additional notes about this meeting" />
                            </div>
                        </div>

                        <!-- Activities Section -->
                        <div class="mt-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="mb-0">Activities Planned</h6>
                                <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddActivity">
                                    <i class="bi bi-plus-circle"></i> Add Activity
                                </button>
                            </div>

                            @if (_activities.Any())
                            {
                                <div class="list-group">
                                    @for (int i = 0; i < _activities.Count; i++)
                                    {
                                        var index = i;
                                        var activity = _activities[i];
                                        <div class="list-group-item">
                                            <div class="row g-2 align-items-center">
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control form-control-sm"
                                                           placeholder="Activity name"
                                                           @bind="activity.Name" />
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox"
                                                               id="consent-@index"
                                                               @bind="activity.RequiresConsent" />
                                                        <label class="form-check-label" for="consent-@index">
                                                            Requires consent form
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-md-2 text-end">
                                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                                            @onclick="() => RemoveActivity(index)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(activity.Description))
                                            {
                                                <div class="row g-2 mt-2">
                                                    <div class="col-12">
                                                        <textarea class="form-control form-control-sm"
                                                                  rows="2"
                                                                  placeholder="Activity notes (optional)"
                                                                  @bind="activity.Description"></textarea>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="mt-1">
                                                    <button type="button" class="btn btn-link btn-sm p-0"
                                                            @onclick="() => activity.Description = string.Empty">
                                                        <i class="bi bi-plus"></i> Add notes
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No activities added yet. Click "Add Activity" to plan what you'll do in this meeting.</p>
                            }
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                                @if (_isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="bi bi-save"></i> Save Meeting
                            </button>
                            <a href="/Meetings" class="btn btn-secondary">Cancel</a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card" style="background-color: #E3F2FD;">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-lightbulb"></i> Tips for Planning
                    </h6>
                    <ul class="mb-0">
                        <li>Times and location default from your unit settings</li>
                        <li>Add activities so everyone knows what to expect</li>
                        <li>Regular meetings are for your usual weekly sessions</li>
                        <li>For camps or special events with costs, use "Add Special Event" instead</li>
                    </ul>
                </div>
            </div>

            @if (_currentTerm != null)
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="bi bi-calendar-check"></i> Current Term
                        </h6>
                        <p class="mb-1"><strong>@_currentTerm.Name</strong></p>
                        <p class="text-muted mb-0">
                            @_currentTerm.StartDate.ToString("dd MMM") - @_currentTerm.EndDate.ToString("dd MMM yyyy")
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
