@page "/Meetings"
@using GUMS.Data.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Meetings - GUMS</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Meetings</h2>
        <div>
            <a href="/Meetings/Alerts" class="btn btn-outline-warning me-2">
                <i class="bi bi-exclamation-triangle"></i> Attendance Alerts
            </a>
            <a href="/Meetings/AddRegular" class="btn btn-primary me-2">
                <i class="bi bi-calendar-plus"></i> Plan a Meeting
            </a>
            <a href="/Meetings/AddExtra" class="btn btn-secondary">
                <i class="bi bi-calendar-event"></i> Add Special Event
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @successMessage
            <button type="button" class="btn-close" @onclick="ClearSuccess"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="ClearError"></button>
        </div>
    }

    <!-- Summary Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="mb-0" style="color: var(--gg-primary-blue);">@upcomingMeetings.Count</h3>
                    <p class="text-muted mb-0">Upcoming Meetings</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="mb-0" style="color: var(--gg-bright-cyan);">
                        @(nextMeetingDate?.ToString("dd MMM") ?? "None")
                    </h3>
                    <p class="text-muted mb-0">Next Meeting</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="mb-0" style="color: var(--gg-dark-navy);">@pastMeetings.Count</h3>
                    <p class="text-muted mb-0">Past Meetings</p>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading meetings...</p>
        </div>
    }
    else if (!upcomingMeetings.Any() && !pastMeetings.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No meetings scheduled yet. Plan your first meeting to get started!
        </div>
    }
    else
    {
        @if (upcomingMeetings.Any())
        {
            <!-- Upcoming Meetings -->
            <div class="card mb-4">
                <div class="card-header" style="background-color: var(--gg-primary-blue); color: white;">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-check"></i> Upcoming Meetings (@upcomingMeetings.Count)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Location</th>
                                    <th>Activities</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var meeting in upcomingMeetings)
                                {
                                    <tr>
                                        <td>
                                            <strong>@meeting.Date.ToString("ddd dd MMM yyyy")</strong>
                                        </td>
                                        <td>
                                            @meeting.StartTime.ToString("HH:mm") - @meeting.EndTime.ToString("HH:mm")
                                        </td>
                                        <td>
                                            @meeting.Title
                                            @if (meeting.CostPerAttendee.HasValue)
                                            {
                                                <br/>
                                                <span class="badge bg-success">Â£@meeting.CostPerAttendee.Value.ToString("F2")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (meeting.MeetingType == MeetingType.Regular)
                                            {
                                                <span class="badge bg-info">Regular</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Special Event</span>
                                            }
                                        </td>
                                        <td>@meeting.LocationName</td>
                                        <td>
                                            @if (meeting.Activities.Any())
                                            {
                                                <span class="badge bg-secondary">@meeting.Activities.Count</span>
                                                @if (meeting.Activities.Any(a => a.RequiresConsent))
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-exclamation-triangle"></i> Consent
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">None</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="/Meetings/View/@meeting.Id" class="btn btn-outline-primary">View</a>
                                                <a href="/Meetings/Edit/@meeting.Id" class="btn btn-outline-secondary">Edit</a>
                                                <button class="btn btn-outline-danger" @onclick="() => ShowDeleteConfirm(meeting)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        @if (pastMeetings.Any())
        {
            <!-- Past Meetings -->
            <div class="card">
                <div class="card-header" style="background-color: #6c757d; color: white;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-x"></i> Past Meetings (@pastMeetings.Count)
                        </h5>
                        <button class="btn btn-sm btn-light" @onclick="TogglePastMeetings">
                            @if (showPastMeetings)
                            {
                                <span><i class="bi bi-chevron-up"></i> Hide</span>
                            }
                            else
                            {
                                <span><i class="bi bi-chevron-down"></i> Show</span>
                            }
                        </button>
                    </div>
                </div>
                @if (showPastMeetings)
                {
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Title</th>
                                        <th>Type</th>
                                        <th>Attendance</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var meeting in pastMeetings.Take(20))
                                    {
                                        var stats = attendanceStatsCache.GetValueOrDefault(meeting.Id);
                                        <tr class="text-muted">
                                            <td>@meeting.Date.ToString("ddd dd MMM yyyy")</td>
                                            <td>
                                                @meeting.StartTime.ToString("HH:mm") - @meeting.EndTime.ToString("HH:mm")
                                            </td>
                                            <td>@meeting.Title</td>
                                            <td>
                                                @if (meeting.MeetingType == MeetingType.Regular)
                                                {
                                                    <span class="badge bg-info">Regular</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Special Event</span>
                                                }
                                            </td>
                                            <td>
                                                @if (stats == null || !stats.HasBeenRecorded)
                                                {
                                                    <a href="/Meetings/Attendance/@meeting.Id" class="btn btn-sm btn-outline-warning">
                                                        <i class="bi bi-exclamation-circle"></i> Record
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@stats.Attended/@stats.TotalMembers</span>
                                                    <small class="text-muted">(@stats.AttendancePercent.ToString("F0")%)</small>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="/Meetings/View/@meeting.Id" class="btn btn-outline-primary">View</a>
                                                    <button class="btn btn-outline-danger" @onclick="() => ShowDeleteConfirm(meeting)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @if (pastMeetings.Count > 20)
                            {
                                <p class="text-muted text-center mt-2">Showing most recent 20 of @pastMeetings.Count past meetings</p>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    }

    <!-- Delete Confirmation Modal -->
    @if (showDeleteConfirm && meetingToDelete != null)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete <strong>@meetingToDelete.Title</strong> on @meetingToDelete.Date.ToString("dd MMM yyyy")?</p>
                        <p class="text-muted">
                            This action cannot be undone. Meetings with recorded attendance cannot be deleted.
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteMeeting" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
