@page "/Meetings/View/{MeetingId:int}"
@using GUMS.Data.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>View Meeting - GUMS</PageTitle>

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Meetings">Meetings</a></li>
            <li class="breadcrumb-item active">Meeting Details</li>
        </ol>
    </nav>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @successMessage
            <button type="button" class="btn-close" @onclick="ClearSuccess"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="ClearError"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (meeting == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> Meeting not found.
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@meeting.Title</h2>
            <div>
                <a href="/Meetings/Edit/@MeetingId" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <!-- Meeting Details Card -->
                <div class="card mb-4">
                    <div class="card-header" style="background-color: var(--gg-primary-blue); color: white;">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-event"></i> Meeting Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Date & Time</h6>
                                <p class="mb-1">
                                    <strong>@meeting.Date.ToString("dddd, dd MMMM yyyy")</strong>
                                </p>
                                <p class="mb-0">
                                    @meeting.StartTime.ToString("HH:mm") - @meeting.EndTime.ToString("HH:mm")
                                    <span class="text-muted">
                                        (@((meeting.EndTime.ToTimeSpan() - meeting.StartTime.ToTimeSpan()).TotalHours.ToString("F1")) hours)
                                    </span>
                                </p>
                            </div>

                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Type</h6>
                                @if (meeting.MeetingType == MeetingType.Regular)
                                {
                                    <span class="badge bg-info fs-6">Regular Meeting</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark fs-6">Special Event</span>
                                }
                            </div>

                            <div class="col-md-12">
                                <h6 class="text-muted mb-2">Location</h6>
                                <p class="mb-1"><strong>@meeting.LocationName</strong></p>
                                @if (!string.IsNullOrEmpty(meeting.LocationAddress))
                                {
                                    <p class="mb-0 text-muted">@meeting.LocationAddress</p>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(meeting.Description))
                            {
                                <div class="col-md-12">
                                    <h6 class="text-muted mb-2">Description</h6>
                                    <p class="mb-0">@meeting.Description</p>
                                </div>
                            }

                            @if (meeting.CostPerAttendee.HasValue && meeting.CostPerAttendee.Value > 0)
                            {
                                <div class="col-md-12">
                                    <div class="card" style="background-color: #FFF9E6; border-color: #FFE08A;">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <i class="bi bi-currency-pound"></i> Cost Information
                                            </h6>
                                            <p class="mb-1">
                                                <strong>Cost per attendee:</strong> £@meeting.CostPerAttendee.Value.ToString("F2")
                                            </p>
                                            @if (meeting.PaymentDeadline.HasValue)
                                            {
                                                <p class="mb-0">
                                                    <strong>Payment deadline:</strong> @meeting.PaymentDeadline.Value.ToString("dd MMMM yyyy")
                                                </p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Activities Card -->
                @if (activities.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header" style="background-color: var(--gg-bright-cyan); color: white;">
                            <h5 class="mb-0">
                                <i class="bi bi-list-check"></i> Activities Planned (@activities.Count)
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                @foreach (var activity in activities)
                                {
                                    <div class="list-group-item @(activity.RequiresConsent ? "border-warning border-2" : "")">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">@activity.Name</h6>
                                                @if (!string.IsNullOrEmpty(activity.Description))
                                                {
                                                    <p class="mb-1 text-muted">@activity.Description</p>
                                                }
                                            </div>
                                            @if (activity.RequiresConsent)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-exclamation-triangle"></i> Consent Required
                                                </span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (activities.Any(a => a.RequiresConsent))
                            {
                                <div class="alert alert-warning mt-3 mb-0" role="alert">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Remember:</strong> Some activities require consent forms from parents.
                                    You'll be able to track consent status in the attendance section (coming soon).
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Attendance Section -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center" style="background-color: var(--gg-bright-cyan); color: white;">
                        <h5 class="mb-0">
                            <i class="bi bi-people"></i> Attendance
                        </h5>
                        <a href="/Meetings/Attendance/@MeetingId" class="btn btn-sm btn-light">
                            <i class="bi bi-pencil"></i> @(attendanceStats?.HasBeenRecorded == true ? "Edit" : "Record")
                        </a>
                    </div>
                    <div class="card-body">
                        @if (attendanceStats == null)
                        {
                            <div class="text-center py-3">
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        }
                        else if (!attendanceStats.HasBeenRecorded)
                        {
                            <div class="text-center py-3">
                                <i class="bi bi-clipboard-check" style="font-size: 2rem; color: #6c757d;"></i>
                                <p class="text-muted mb-2">Attendance has not been recorded yet.</p>
                                <a href="/Meetings/Attendance/@MeetingId" class="btn btn-primary">
                                    <i class="bi bi-people"></i> Record Attendance
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="row text-center">
                                <div class="col-4">
                                    <h3 class="mb-0 text-success">@attendanceStats.Attended</h3>
                                    <small class="text-muted">Present</small>
                                </div>
                                <div class="col-4">
                                    <h3 class="mb-0 text-danger">@attendanceStats.NotAttended</h3>
                                    <small class="text-muted">Absent</small>
                                </div>
                                <div class="col-4">
                                    <h3 class="mb-0 text-primary">@attendanceStats.TotalMembers</h3>
                                    <small class="text-muted">Total</small>
                                </div>
                            </div>
                            <div class="progress mt-3" style="height: 20px;">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width: @attendanceStats.AttendancePercent%;"
                                     aria-valuenow="@attendanceStats.AttendancePercent"
                                     aria-valuemin="0" aria-valuemax="100">
                                    @attendanceStats.AttendancePercent.ToString("F0")%
                                </div>
                            </div>
                            <p class="text-center text-muted mt-2 mb-0">
                                @attendanceStats.AttendancePercent.ToString("F0")% attendance rate
                            </p>

                            @if (requiresConsent && (attendanceStats.ConsentEmailReceived > 0 || attendanceStats.ConsentFormReceived > 0))
                            {
                                <hr />
                                <h6><i class="bi bi-file-earmark-check"></i> Consent Status</h6>
                                <div class="d-flex justify-content-around text-center">
                                    <div>
                                        <span class="badge bg-info fs-6">@attendanceStats.ConsentEmailReceived</span>
                                        <br /><small class="text-muted">Emails</small>
                                    </div>
                                    <div>
                                        <span class="badge bg-success fs-6">@attendanceStats.ConsentFormReceived</span>
                                        <br /><small class="text-muted">Forms</small>
                                    </div>
                                    @if (attendanceStats.OutstandingConsent > 0)
                                    {
                                        <div>
                                            <span class="badge bg-warning text-dark fs-6">@attendanceStats.OutstandingConsent</span>
                                            <br /><small class="text-muted">Outstanding</small>
                                        </div>
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Quick Actions -->
                <div class="card mb-3">
                    <div class="card-header" style="background-color: var(--gg-dark-navy); color: white;">
                        <h6 class="mb-0">Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/Meetings/Edit/@MeetingId" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit Meeting
                            </a>
                            <a href="/Meetings/Attendance/@MeetingId" class="btn btn-success">
                                <i class="bi bi-people"></i> @(attendanceStats?.HasBeenRecorded == true ? "Edit Attendance" : "Record Attendance")
                            </a>
                            @if (meeting.CostPerAttendee.HasValue && meeting.CostPerAttendee.Value > 0)
                            {
                                <button class="btn btn-outline-secondary" disabled>
                                    <i class="bi bi-currency-pound"></i> View Payments
                                    <small class="d-block">Coming Soon</small>
                                </button>
                            }
                            <button class="btn btn-outline-danger" @onclick="ShowDeleteConfirm">
                                <i class="bi bi-trash"></i> Delete Meeting
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Meeting Status -->
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="bi bi-info-circle"></i> Meeting Status
                        </h6>
                        @if (meeting.Date < DateTime.Today)
                        {
                            <p class="mb-1">
                                <span class="badge bg-secondary">Past Meeting</span>
                            </p>
                            <p class="text-muted mb-0">
                                This meeting happened @((DateTime.Today - meeting.Date).Days) day(s) ago.
                            </p>
                        }
                        else if (meeting.Date == DateTime.Today)
                        {
                            <p class="mb-1">
                                <span class="badge bg-success">Today</span>
                            </p>
                            <p class="text-muted mb-0">
                                This meeting is happening today!
                            </p>
                        }
                        else
                        {
                            <p class="mb-1">
                                <span class="badge bg-info">Upcoming</span>
                            </p>
                            <p class="text-muted mb-0">
                                This meeting is in @((meeting.Date - DateTime.Today).Days) day(s).
                            </p>
                        }

                        @if (meeting.CostPerAttendee.HasValue && meeting.CostPerAttendee.Value > 0)
                        {
                            <hr />
                            <p class="mb-1">
                                <i class="bi bi-currency-pound"></i> <strong>Has Cost:</strong> £@meeting.CostPerAttendee.Value.ToString("F2")
                            </p>
                        }

                        @if (activities.Any(a => a.RequiresConsent))
                        {
                            <hr />
                            <p class="mb-0">
                                <i class="bi bi-exclamation-triangle text-warning"></i>
                                <strong>Consent forms required</strong>
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        @if (showDeleteConfirm)
        {
            <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title">
                                <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                            </h5>
                            <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete <strong>@meeting.Title</strong>?</p>
                            <p class="text-muted">
                                This action cannot be undone. Meetings with recorded attendance cannot be deleted.
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CancelDelete">
                                Cancel
                            </button>
                            <button type="button" class="btn btn-danger" @onclick="DeleteMeeting" disabled="@isDeleting">
                                @if (isDeleting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="bi bi-trash"></i> Delete Meeting
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

