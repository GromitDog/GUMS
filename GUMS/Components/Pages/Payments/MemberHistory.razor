@page "/Payments/MemberHistory/{MembershipNumber}"
@using GUMS.Data.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Payment History - GUMS</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Payment History</h2>
        <a href="/Payments" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Payments
        </a>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @_errorMessage
            <button type="button" class="btn-close" @onclick="ClearError"></button>
        </div>
    }

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading payment history...</p>
        </div>
    }
    else
    {
        <!-- Member Summary Card -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header" style="background-color: var(--gg-primary-blue); color: white;">
                        <h5 class="mb-0">
                            <i class="bi bi-person"></i> @_summary.MemberName
                            <small class="ms-2">(@MembershipNumber)</small>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h4 class="mb-0">@_summary.TotalPayments</h4>
                                <small class="text-muted">Total Payments</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="mb-0 text-success">@_summary.TotalPaid.ToString("C")</h4>
                                <small class="text-muted">Total Paid</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="mb-0 @(_summary.TotalOutstanding > 0 ? "text-danger" : "text-success")">
                                    @_summary.TotalOutstanding.ToString("C")
                                </h4>
                                <small class="text-muted">Outstanding</small>
                            </div>
                            <div class="col-md-3">
                                @if (_summary.OverduePayments > 0)
                                {
                                    <h4 class="mb-0 text-danger">@_summary.OverduePayments</h4>
                                    <small class="text-danger">Overdue</small>
                                }
                                else
                                {
                                    <h4 class="mb-0 text-success"><i class="bi bi-check-circle"></i></h4>
                                    <small class="text-muted">No Overdue</small>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <a href="/Register/View/@MembershipNumber" class="btn btn-outline-primary mb-2">
                            <i class="bi bi-person-lines-fill"></i> View Member Profile
                        </a>
                        @if (_summary.PendingPayments > 0)
                        {
                            <a href="/Payments?search=@MembershipNumber&status=Pending" class="btn btn-warning">
                                <i class="bi bi-cash"></i> View Pending Payments
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter -->
        <div class="mb-3">
            <div class="btn-group" role="group">
                <button type="button" class="btn @(_paymentTypeFilter == null ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => FilterByType(null)">
                    All (@_payments.Count)
                </button>
                <button type="button" class="btn @(_paymentTypeFilter == PaymentType.Subs ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => FilterByType(PaymentType.Subs)">
                    Subs (@_payments.Count(p => p.PaymentType == PaymentType.Subs))
                </button>
                <button type="button" class="btn @(_paymentTypeFilter == PaymentType.Activity ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => FilterByType(PaymentType.Activity)">
                    Activity (@_payments.Count(p => p.PaymentType == PaymentType.Activity))
                </button>
            </div>
        </div>

        @if (!_filteredPayments.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No payments found for this member.
            </div>
        }
        else
        {
            <!-- Payment History Table -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Reference</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-end">Paid</th>
                                    <th class="text-end">Outstanding</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in _filteredPayments)
                                {
                                    var isOverdue = payment.Status == PaymentStatus.Pending && payment.DueDate < DateTime.Today;

                                    <tr class="@(isOverdue ? "table-warning" : "")">
                                        <td>
                                            @payment.DueDate.ToString("dd MMM yyyy")
                                            @if (payment.PaymentDate.HasValue)
                                            {
                                                <br />
                                                <small class="text-muted">Paid: @payment.PaymentDate.Value.ToString("dd MMM yyyy")</small>
                                            }
                                        </td>
                                        <td>
                                            @if (payment.PaymentType == PaymentType.Subs)
                                            {
                                                <span class="badge bg-info">Subs</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Activity</span>
                                            }
                                        </td>
                                        <td>
                                            @payment.Reference
                                            @if (!string.IsNullOrEmpty(payment.Notes))
                                            {
                                                <br />
                                                <small class="text-muted">@payment.Notes</small>
                                            }
                                        </td>
                                        <td class="text-end">@payment.Amount.ToString("C")</td>
                                        <td class="text-end text-success">@payment.AmountPaid.ToString("C")</td>
                                        <td class="text-end">
                                            @if (payment.OutstandingBalance > 0)
                                            {
                                                <strong class="text-danger">@payment.OutstandingBalance.ToString("C")</strong>
                                            }
                                            else
                                            {
                                                <span>@payment.OutstandingBalance.ToString("C")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (isOverdue)
                                            {
                                                <span class="badge bg-danger">Overdue</span>
                                            }
                                            else if (payment.Status == PaymentStatus.Pending)
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                            else if (payment.Status == PaymentStatus.Paid)
                                            {
                                                <span class="badge bg-success">Paid</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Cancelled</span>
                                            }
                                        </td>
                                        <td>
                                            @if (payment.Status == PaymentStatus.Pending)
                                            {
                                                <a href="/Payments/RecordPayment/@payment.Id" class="btn btn-sm btn-success">
                                                    <i class="bi bi-cash"></i> Pay
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>
