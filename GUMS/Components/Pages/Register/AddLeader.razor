@page "/Register/AddLeader"
@using GUMS.Data.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Add Leader - GUMS</PageTitle>

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Register">Register</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add Leader</li>
        </ol>
    </nav>

    <h2 class="mb-4">Add New Leader</h2>

    @if (_errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @_errorMessage
            <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
        </div>
    }

    <EditForm Model="_person" OnValidSubmit="HandleSubmit" FormName="addLeaderForm">
        <DataAnnotationsValidator />

        <div class="row">
            <div class="col-lg-8">
                <!-- Basic Information -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Membership Number *</label>
                                <InputText class="form-control" @bind-Value="_person.MembershipNumber" placeholder="e.g., LDR12345" />
                                <ValidationMessage For="() => _person.MembershipNumber" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Full Name *</label>
                                <InputText class="form-control" @bind-Value="_person.FullName" placeholder="e.g., Jane Smith" />
                                <ValidationMessage For="() => _person.FullName" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date of Birth *</label>
                                <InputDate class="form-control" @bind-Value="_person.DateOfBirth" />
                                <ValidationMessage For="() => _person.DateOfBirth" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date Joined</label>
                                <InputDate class="form-control" @bind-Value="_dateJoined" />
                                <small class="form-text text-muted">Defaults to today if not specified</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <InputText type="email" class="form-control" @bind-Value="_person.Email" placeholder="e.g., leader@example.com" />
                                <ValidationMessage For="() => _person.Email" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Phone Number</label>
                                <InputText class="form-control" @bind-Value="_person.Phone" placeholder="e.g., 07123 456789" />
                                <ValidationMessage For="() => _person.Phone" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Emergency Contacts -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Emergency Contacts</h5>
                    </div>
                    <div class="card-body">
                        <EmergencyContactEditor Contacts="_person.EmergencyContacts" />
                    </div>
                </div>

                <!-- Medical & Wellbeing -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Medical & Wellbeing</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Allergies / Intolerances</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="_person.Allergies" placeholder="List any allergies or food intolerances..." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">General Notes</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="_person.Notes" placeholder="Any other important information (e.g., role, qualifications)..." />
                        </div>
                    </div>
                </div>

                <!-- Permissions -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Photo Permission</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="photoPermission" id="photoNone"
                                   checked="@(_person.PhotoPermission == PhotoPermission.None)"
                                   @onchange="() => _person.PhotoPermission = PhotoPermission.None" />
                            <label class="form-check-label" for="photoNone">
                                <strong>No Photos</strong> - Do not take or use photos
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="photoPermission" id="photoUnit"
                                   checked="@(_person.PhotoPermission == PhotoPermission.UnitOnly)"
                                   @onchange="() => _person.PhotoPermission = PhotoPermission.UnitOnly" />
                            <label class="form-check-label" for="photoUnit">
                                <strong>Unit Use Only</strong> - Internal communications and displays only
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="photoPermission" id="photoAll"
                                   checked="@(_person.PhotoPermission == PhotoPermission.AllMedia)"
                                   @onchange="() => _person.PhotoPermission = PhotoPermission.AllMedia" />
                            <label class="form-check-label" for="photoAll">
                                <strong>All Media</strong> - Social media, publicity, and all uses
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex gap-2 mb-4">
                    <button type="submit" class="btn btn-primary" disabled="@_isProcessing">
                        @if (_isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>Save Leader</span>
                        }
                    </button>
                    <a href="/Register" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">Required Information</h6>
                        <ul class="small mb-0">
                            <li>Membership Number</li>
                            <li>Full Name</li>
                            <li>Date of Birth</li>
                            <li>At least one emergency contact with:
                                <ul>
                                    <li>Contact name</li>
                                    <li>Relationship</li>
                                    <li>Primary phone</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
</div>
