@page "/Register/Edit/{Id:int}"
@using GUMS.Data.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Edit Member - GUMS</PageTitle>

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Register">Register</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Member</li>
        </ol>
    </nav>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (_person == null)
    {
        <div class="alert alert-danger">
            Member not found.
        </div>
    }
    else
    {
        <h2 class="mb-4">Edit @(_person.PersonType == PersonType.Girl ? "Girl" : "Leader")</h2>

        @if (_errorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @_errorMessage
                <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
            </div>
        }

        <EditForm Model="_person" OnValidSubmit="HandleSubmit" FormName="editMemberForm">
            <DataAnnotationsValidator />

            <div class="row">
                <div class="col-lg-8">
                    <!-- Basic Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Basic Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Membership Number *</label>
                                    <InputText class="form-control" @bind-Value="_person.MembershipNumber" />
                                    <ValidationMessage For="() => _person.MembershipNumber" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Full Name *</label>
                                    <InputText class="form-control" @bind-Value="_person.FullName" />
                                    <ValidationMessage For="() => _person.FullName" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Date of Birth *</label>
                                <InputDate class="form-control" @bind-Value="_person.DateOfBirth" />
                                <ValidationMessage For="() => _person.DateOfBirth" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Date Joined</label>
                                    <InputDate class="form-control" @bind-Value="_person.DateJoined" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" @bind="_person.IsActive">
                                        <option value="true">Active</option>
                                        <option value="false">Inactive</option>
                                    </select>
                                </div>
                            </div>

                            @if (!_person.IsActive && _person.DateLeft.HasValue)
                            {
                                <div class="mb-3">
                                    <label class="form-label">Date Left</label>
                                    <InputDate class="form-control" @bind-Value="_person.DateLeft" />
                                </div>
                            }

                            @if (_person.PersonType == PersonType.Leader)
                            {
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Email</label>
                                        <InputText type="email" class="form-control" @bind-Value="_person.Email" placeholder="e.g., leader@example.com" />
                                        <ValidationMessage For="() => _person.Email" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Phone Number</label>
                                        <InputText class="form-control" @bind-Value="_person.Phone" placeholder="e.g., 07123 456789" />
                                        <ValidationMessage For="() => _person.Phone" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Emergency Contacts -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Emergency Contacts</h5>
                        </div>
                        <div class="card-body">
                            <EmergencyContactEditor Contacts="_person.EmergencyContacts" />
                        </div>
                    </div>

                    <!-- Medical & Wellbeing -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Medical & Wellbeing</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Allergies / Intolerances</label>
                                <InputTextArea class="form-control" rows="3" @bind-Value="_person.Allergies" />
                            </div>

                            @if (_person.PersonType == PersonType.Girl)
                            {
                                <div class="mb-3">
                                    <label class="form-label">Disabilities / Additional Needs</label>
                                    <InputTextArea class="form-control" rows="3" @bind-Value="_person.Disabilities" />
                                </div>
                            }

                            <div class="mb-3">
                                <label class="form-label">General Notes</label>
                                <InputTextArea class="form-control" rows="3" @bind-Value="_person.Notes" />
                            </div>
                        </div>
                    </div>

                    <!-- Permissions -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Photo Permission</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="photoPermission" id="photoNone"
                                       checked="@(_person.PhotoPermission == PhotoPermission.None)"
                                       @onchange="() => _person.PhotoPermission = PhotoPermission.None" />
                                <label class="form-check-label" for="photoNone">
                                    <strong>No Photos</strong> - Do not take or use photos
                                </label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="photoPermission" id="photoUnit"
                                       checked="@(_person.PhotoPermission == PhotoPermission.UnitOnly)"
                                       @onchange="() => _person.PhotoPermission = PhotoPermission.UnitOnly" />
                                <label class="form-check-label" for="photoUnit">
                                    <strong>Unit Use Only</strong> - Internal communications and displays only
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="photoPermission" id="photoAll"
                                       checked="@(_person.PhotoPermission == PhotoPermission.AllMedia)"
                                       @onchange="() => _person.PhotoPermission = PhotoPermission.AllMedia" />
                                <label class="form-check-label" for="photoAll">
                                    <strong>All Media</strong> - Social media, publicity, and all uses
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex gap-2 mb-4">
                        <button type="submit" class="btn btn-primary" disabled="@_isProcessing">
                            @if (_isProcessing)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>Save Changes</span>
                            }
                        </button>
                        <a href="/Register/View/@Id" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>
