@page "/Register"
@using GUMS.Data.Enums
@using GUMS.Data.Entities
@using GUMS.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer
@inject IPersonService PersonService
@inject NavigationManager NavigationManager

<PageTitle>Member Register - GUMS</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Member Register</h2>
        <div>
            <a href="/Register/AddGirl" class="btn btn-primary me-2">
                <i class="bi bi-person-plus"></i> Add Girl
            </a>
            <a href="/Register/AddLeader" class="btn btn-secondary">
                <i class="bi bi-person-plus-fill"></i> Add Leader
            </a>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Find someone</label>
                    <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput" @onkeyup="HandleSearch" placeholder="Type a name or membership number" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Show me</label>
                    <select class="form-select" @bind="filterType" @bind:after="LoadMembers">
                        <option value="">Everyone</option>
                        <option value="Girl">Girls only</option>
                        <option value="Leader">Leaders only</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="filterStatus" @bind:after="LoadMembers">
                        <option value="active">Active</option>
                        <option value="inactive">Left</option>
                        <option value="all">All</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Members List -->
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading members...</p>
        </div>
    }
    else if (!members.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Your register is empty. Add your first girl or leader to get started!
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                @{
                    var girls = members.Where(m => m.PersonType == PersonType.Girl).OrderBy(m => m.FullName).ToList();
                    var leaders = members.Where(m => m.PersonType == PersonType.Leader).OrderBy(m => m.FullName).ToList();
                }

                <p class="text-muted mb-3">Showing @members.Count member(s) (@girls.Count girl(s), @leaders.Count leader(s))</p>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Membership Number</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Date Joined</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (girls.Any())
                            {
                                <tr class="table-active">
                                    <td colspan="6" class="fw-bold" style="background-color: #E3F2FD; color: #007BC4;">
                                        <i class="bi bi-people-fill"></i> Girls (@girls.Count)
                                    </td>
                                </tr>
                                @foreach (var member in girls)
                                {
                                    <tr>
                                        <td>@member.MembershipNumber</td>
                                        <td>
                                            @if (member.IsDataRemoved)
                                            {
                                                <span class="text-muted fst-italic">Removed Member</span>
                                            }
                                            else
                                            {
                                                @member.FullName
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                @member.PersonType
                                            </span>
                                        </td>
                                        <td>
                                            @if (member.IsDataRemoved)
                                            {
                                                <span class="badge bg-dark">Data Removed</span>
                                            }
                                            else if (member.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Inactive</span>
                                            }
                                        </td>
                                        <td>@member.DateJoined.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="/Register/View/@member.Id" class="btn btn-outline-primary">View</a>
                                                @if (!member.IsDataRemoved)
                                                {
                                                    <a href="/Register/Edit/@member.Id" class="btn btn-outline-secondary">Edit</a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }

                            @if (leaders.Any())
                            {
                                <tr class="table-active">
                                    <td colspan="6" class="fw-bold" style="background-color: #F5F5F5; color: #161B4E;">
                                        <i class="bi bi-award-fill"></i> Leaders (@leaders.Count)
                                    </td>
                                </tr>
                                @foreach (var member in leaders)
                                {
                                    <tr>
                                        <td>@member.MembershipNumber</td>
                                        <td>
                                            @if (member.IsDataRemoved)
                                            {
                                                <span class="text-muted fst-italic">Removed Member</span>
                                            }
                                            else
                                            {
                                                @member.FullName
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                @member.PersonType
                                            </span>
                                        </td>
                                        <td>
                                            @if (member.IsDataRemoved)
                                            {
                                                <span class="badge bg-dark">Data Removed</span>
                                            }
                                            else if (member.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Inactive</span>
                                            }
                                        </td>
                                        <td>@member.DateJoined.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="/Register/View/@member.Id" class="btn btn-outline-primary">View</a>
                                                @if (!member.IsDataRemoved)
                                                {
                                                    <a href="/Register/Edit/@member.Id" class="btn btn-outline-secondary">Edit</a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Person> members = new();
    private string searchTerm = string.Empty;
    private string filterType = string.Empty;
    private string filterStatus = "active";
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadMembers();
    }

    private async Task LoadMembers()
    {
        isLoading = true;

        try
        {
            // Start with all or active members based on filter
            List<Person> allMembers;
            if (filterStatus == "active")
            {
                allMembers = await PersonService.GetActiveAsync();
            }
            else if (filterStatus == "inactive")
            {
                allMembers = await PersonService.GetInactiveAsync();
            }
            else
            {
                allMembers = await PersonService.GetAllAsync();
            }

            // Apply type filter
            if (!string.IsNullOrEmpty(filterType) && Enum.TryParse<PersonType>(filterType, out var type))
            {
                allMembers = allMembers.Where(m => m.PersonType == type).ToList();
            }

            // Apply search filter
            if (!string.IsNullOrEmpty(searchTerm))
            {
                allMembers = allMembers.Where(m =>
                    m.MembershipNumber.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    (m.FullName != null && m.FullName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                ).ToList();
            }

            members = allMembers;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSearch()
    {
        await LoadMembers();
    }
}
