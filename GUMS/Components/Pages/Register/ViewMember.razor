@page "/Register/View/{Id:int}"
@using GUMS.Data.Entities
@using GUMS.Data.Enums
@using GUMS.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using System.Text
@attribute [Authorize]
@rendermode InteractiveServer
@inject IPersonService PersonService
@inject UserManager<IdentityUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<PageTitle>View Member - GUMS</PageTitle>

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Register">Register</a></li>
            <li class="breadcrumb-item active" aria-current="page">View Member</li>
        </ol>
    </nav>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (person == null)
    {
        <div class="alert alert-danger">
            Member not found.
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                @if (person.IsDataRemoved)
                {
                    <span class="text-muted">Removed Member @person.MembershipNumber</span>
                }
                else
                {
                    @person.FullName
                }
            </h2>
            <div>
                @if (!person.IsDataRemoved)
                {
                    <a href="/Register/Edit/@Id" class="btn btn-secondary me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    @if (person.IsActive)
                    {
                        <button class="btn btn-warning" @onclick="ShowMarkAsLeftModal">
                            <i class="bi bi-person-dash"></i> Mark as Left
                        </button>
                    }
                }
                <a href="/Register" class="btn btn-outline-secondary ms-2">Back to Register</a>
            </div>
        </div>

        @if (successMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @successMessage
                <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
            </div>
        }

        @if (errorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        @if (person.IsDataRemoved)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> This member's personal data has been removed. Only the membership number and historical records remain.
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Remaining Information</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Membership Number</dt>
                        <dd class="col-sm-9">@person.MembershipNumber</dd>

                        <dt class="col-sm-3">Type</dt>
                        <dd class="col-sm-9">@person.PersonType</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-dark">Data Removed</span>
                        </dd>

                        @if (person.DateLeft.HasValue)
                        {
                            <dt class="col-sm-3">Date Left</dt>
                            <dd class="col-sm-9">@person.DateLeft.Value.ToString("dd/MM/yyyy")</dd>
                        }
                    </dl>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-8">
                    <!-- Basic Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Basic Information</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Membership Number</dt>
                                <dd class="col-sm-8">@person.MembershipNumber</dd>

                                <dt class="col-sm-4">Full Name</dt>
                                <dd class="col-sm-8">@person.FullName</dd>

                                <dt class="col-sm-4">Date of Birth</dt>
                                <dd class="col-sm-8">@person.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">Type</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-@(person.PersonType == PersonType.Girl ? "info" : "secondary")">
                                        @person.PersonType
                                    </span>
                                </dd>

                                @if (person.Section.HasValue)
                                {
                                    <dt class="col-sm-4">Section</dt>
                                    <dd class="col-sm-8">@person.Section</dd>
                                }

                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    @if (person.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Inactive</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Date Joined</dt>
                                <dd class="col-sm-8">@person.DateJoined.ToString("dd/MM/yyyy")</dd>

                                @if (person.DateLeft.HasValue)
                                {
                                    <dt class="col-sm-4">Date Left</dt>
                                    <dd class="col-sm-8">@person.DateLeft.Value.ToString("dd/MM/yyyy")</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <!-- Emergency Contacts -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Emergency Contacts (@person.EmergencyContacts.Count)</h5>
                        </div>
                        <div class="card-body">
                            @if (!person.EmergencyContacts.Any())
                            {
                                <p class="text-muted mb-0">No emergency contacts on record.</p>
                            }
                            else
                            {
                                @foreach (var contact in person.EmergencyContacts.OrderBy(c => c.SortOrder))
                                {
                                    <div class="@(person.EmergencyContacts.Last() != contact ? "mb-3 pb-3 border-bottom" : "")">
                                        <h6>@contact.ContactName</h6>
                                        <dl class="row small mb-0">
                                            <dt class="col-sm-4">Relationship</dt>
                                            <dd class="col-sm-8">@contact.Relationship</dd>

                                            <dt class="col-sm-4">Primary Phone</dt>
                                            <dd class="col-sm-8"><a href="tel:@contact.PrimaryPhone">@contact.PrimaryPhone</a></dd>

                                            @if (!string.IsNullOrWhiteSpace(contact.SecondaryPhone))
                                            {
                                                <dt class="col-sm-4">Secondary Phone</dt>
                                                <dd class="col-sm-8"><a href="tel:@contact.SecondaryPhone">@contact.SecondaryPhone</a></dd>
                                            }

                                            @if (!string.IsNullOrWhiteSpace(contact.Email))
                                            {
                                                <dt class="col-sm-4">Email</dt>
                                                <dd class="col-sm-8"><a href="mailto:@contact.Email">@contact.Email</a></dd>
                                            }

                                            @if (!string.IsNullOrWhiteSpace(contact.Notes))
                                            {
                                                <dt class="col-sm-4">Notes</dt>
                                                <dd class="col-sm-8">@contact.Notes</dd>
                                            }
                                        </dl>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <!-- Medical & Wellbeing -->
                    @if (!string.IsNullOrWhiteSpace(person.Allergies) || !string.IsNullOrWhiteSpace(person.Disabilities) || !string.IsNullOrWhiteSpace(person.Notes))
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Medical & Wellbeing</h5>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrWhiteSpace(person.Allergies))
                                {
                                    <h6>Allergies / Intolerances</h6>
                                    <p>@person.Allergies</p>
                                }

                                @if (!string.IsNullOrWhiteSpace(person.Disabilities))
                                {
                                    <h6>Disabilities / Additional Needs</h6>
                                    <p>@person.Disabilities</p>
                                }

                                @if (!string.IsNullOrWhiteSpace(person.Notes))
                                {
                                    <h6>General Notes</h6>
                                    <p class="mb-0">@person.Notes</p>
                                }
                            </div>
                        </div>
                    }

                    <!-- Photo Permission -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Photo Permission</h5>
                        </div>
                        <div class="card-body">
                            @switch (person.PhotoPermission)
                            {
                                case PhotoPermission.None:
                                    <span class="badge bg-danger">No Photos</span>
                                    <p class="mb-0 mt-2">Do not take or use photos of this member.</p>
                                    break;
                                case PhotoPermission.UnitOnly:
                                    <span class="badge bg-warning text-dark">Unit Use Only</span>
                                    <p class="mb-0 mt-2">Photos may be used for internal communications and displays only.</p>
                                    break;
                                case PhotoPermission.AllMedia:
                                    <span class="badge bg-success">All Media</span>
                                    <p class="mb-0 mt-2">Photos may be used for social media, publicity, and all purposes.</p>
                                    break;
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Mark as Left Modal -->
@if (showMarkAsLeftModal && person != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mark @person.FullName as Left</h5>
                    <button type="button" class="btn-close" @onclick="CloseMarkAsLeftModal"></button>
                </div>
                <div class="modal-body">
                    <p>This will remove all personal data for this member while keeping their membership number and historical records (attendance and payments).</p>

                    <div class="mb-3">
                        <label class="form-label">Date Left</label>
                        <input type="date" class="form-control" @bind="dateLeft" />
                    </div>

                    <div class="alert alert-warning">
                        <strong>⚠️ This action cannot be undone!</strong>
                        <p class="mb-0 mt-2">The following data will be permanently removed:</p>
                        <ul class="mt-2 mb-0">
                            <li>Name, date of birth</li>
                            <li>All emergency contacts</li>
                            <li>Medical information</li>
                            <li>Notes and permissions</li>
                        </ul>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="exportBeforeRemoval" @bind="exportBeforeRemoval" />
                        <label class="form-check-label" for="exportBeforeRemoval">
                            Export member data before removal (Recommended)
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseMarkAsLeftModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmMarkAsLeft" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Processing...</span>
                        }
                        else
                        {
                            <span>Confirm & Remove Data</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Person? person;
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = true;
    private bool isProcessing = false;
    private bool showMarkAsLeftModal = false;
    private DateTime dateLeft = DateTime.Today;
    private bool exportBeforeRemoval = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            person = await PersonService.GetByIdAsync(Id);
        }
        catch
        {
            person = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowMarkAsLeftModal()
    {
        showMarkAsLeftModal = true;
        dateLeft = DateTime.Today;
        exportBeforeRemoval = true;
    }

    private void CloseMarkAsLeftModal()
    {
        showMarkAsLeftModal = false;
        errorMessage = null;
    }

    private async Task ConfirmMarkAsLeft()
    {
        if (person == null) return;

        isProcessing = true;
        errorMessage = null;

        try
        {
            // Get current user for audit log
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = await UserManager.GetUserAsync(authState.User);
            var userName = user?.Email ?? "Unknown";

            // Export data if requested
            if (exportBeforeRemoval)
            {
                var exportData = await PersonService.ExportMemberDataAsync(Id);
                var fileName = $"{person.MembershipNumber}_{person.FullName?.Replace(" ", "_")}_Export.json";

                // Trigger download
                var bytes = Encoding.UTF8.GetBytes(exportData);
                var base64 = Convert.ToBase64String(bytes);
                await JS.InvokeVoidAsync("eval", $"(function(){{var link = document.createElement('a');link.download = '{fileName}';link.href = 'data:application/json;base64,{base64}';link.click();}})()");
            }

            // Set date left if different from current
            if (person.DateLeft != dateLeft)
            {
                person.DateLeft = dateLeft;
            }

            // Remove member data
            await PersonService.RemoveMemberDataAsync(Id, userName, exportBeforeRemoval);

            // Reload person to show updated state
            person = await PersonService.GetByIdAsync(Id);

            // Close modal and show success message
            showMarkAsLeftModal = false;
            successMessage = "Member data has been successfully removed. The membership number and historical records have been retained.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error removing member data: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }
}
