@page "/Register/View/{Id:int}"
@using GUMS.Data.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>View Member - GUMS</PageTitle>

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Register">Register</a></li>
            <li class="breadcrumb-item active" aria-current="page">View Member</li>
        </ol>
    </nav>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (_person == null)
    {
        <div class="alert alert-danger">
            Member not found.
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                @if (_person.IsDataRemoved)
                {
                    <span class="text-muted">Removed Member @_person.MembershipNumber</span>
                }
                else
                {
                    @_person.FullName
                }
            </h2>
            <div>
                @if (!_person.IsDataRemoved)
                {
                    <a href="/Register/Edit/@Id" class="btn btn-secondary me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    @if (_person.IsActive)
                    {
                        <button class="btn btn-warning" @onclick="ShowMarkAsLeftModal">
                            <i class="bi bi-person-dash"></i> Mark as Left
                        </button>
                    }
                }
                <a href="/Register" class="btn btn-outline-secondary ms-2">Back to Register</a>
            </div>
        </div>

        @if (_successMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @_successMessage
                <button type="button" class="btn-close" @onclick="() => _successMessage = null"></button>
            </div>
        }

        @if (_errorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @_errorMessage
                <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
            </div>
        }

        @if (_person.IsDataRemoved)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> This member's personal data has been removed. Only the membership number and historical records remain.
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Remaining Information</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Membership Number</dt>
                        <dd class="col-sm-9">@_person.MembershipNumber</dd>

                        <dt class="col-sm-3">Type</dt>
                        <dd class="col-sm-9">@_person.PersonType</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-dark">Data Removed</span>
                        </dd>

                        @if (_person.DateLeft.HasValue)
                        {
                            <dt class="col-sm-3">Date Left</dt>
                            <dd class="col-sm-9">@_person.DateLeft.Value.ToString("dd/MM/yyyy")</dd>
                        }
                    </dl>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-8">
                    <!-- Basic Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Basic Information</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Membership Number</dt>
                                <dd class="col-sm-8">@_person.MembershipNumber</dd>

                                <dt class="col-sm-4">Full Name</dt>
                                <dd class="col-sm-8">@_person.FullName</dd>

                                <dt class="col-sm-4">Date of Birth</dt>
                                <dd class="col-sm-8">@_person.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">Type</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-@(_person.PersonType == PersonType.Girl ? "info" : "secondary")">
                                        @_person.PersonType
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    @if (_person.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Inactive</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Date Joined</dt>
                                <dd class="col-sm-8">@_person.DateJoined.ToString("dd/MM/yyyy")</dd>

                                @if (_person.DateLeft.HasValue)
                                {
                                    <dt class="col-sm-4">Date Left</dt>
                                    <dd class="col-sm-8">@_person.DateLeft.Value.ToString("dd/MM/yyyy")</dd>
                                }

                                @if (_person.PersonType == PersonType.Leader)
                                {
                                    @if (!string.IsNullOrWhiteSpace(_person.Email))
                                    {
                                        <dt class="col-sm-4">Email</dt>
                                        <dd class="col-sm-8"><a href="mailto:@_person.Email">@_person.Email</a></dd>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(_person.Phone))
                                    {
                                        <dt class="col-sm-4">Phone</dt>
                                        <dd class="col-sm-8"><a href="tel:@_person.Phone">@_person.Phone</a></dd>
                                    }
                                }
                            </dl>
                        </div>
                    </div>

                    <!-- Emergency Contacts -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Emergency Contacts (@_person.EmergencyContacts.Count)</h5>
                        </div>
                        <div class="card-body">
                            @if (!_person.EmergencyContacts.Any())
                            {
                                <p class="text-muted mb-0">No emergency contacts on record.</p>
                            }
                            else
                            {
                                @foreach (var contact in _person.EmergencyContacts.OrderBy(c => c.SortOrder))
                                {
                                    <div class="@(_person.EmergencyContacts.Last() != contact ? "mb-3 pb-3 border-bottom" : "")">
                                        <h6>@contact.ContactName</h6>
                                        <dl class="row small mb-0">
                                            <dt class="col-sm-4">Relationship</dt>
                                            <dd class="col-sm-8">@contact.Relationship</dd>

                                            <dt class="col-sm-4">Primary Phone</dt>
                                            <dd class="col-sm-8"><a href="tel:@contact.PrimaryPhone">@contact.PrimaryPhone</a></dd>

                                            @if (!string.IsNullOrWhiteSpace(contact.SecondaryPhone))
                                            {
                                                <dt class="col-sm-4">Secondary Phone</dt>
                                                <dd class="col-sm-8"><a href="tel:@contact.SecondaryPhone">@contact.SecondaryPhone</a></dd>
                                            }

                                            @if (!string.IsNullOrWhiteSpace(contact.Email))
                                            {
                                                <dt class="col-sm-4">Email</dt>
                                                <dd class="col-sm-8"><a href="mailto:@contact.Email">@contact.Email</a></dd>
                                            }

                                            @if (!string.IsNullOrWhiteSpace(contact.Notes))
                                            {
                                                <dt class="col-sm-4">Notes</dt>
                                                <dd class="col-sm-8">@contact.Notes</dd>
                                            }
                                        </dl>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <!-- Medical & Wellbeing -->
                    @if (!string.IsNullOrWhiteSpace(_person.Allergies) || !string.IsNullOrWhiteSpace(_person.Disabilities) || !string.IsNullOrWhiteSpace(_person.Notes))
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Medical & Wellbeing</h5>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrWhiteSpace(_person.Allergies))
                                {
                                    <h6>Allergies / Intolerances</h6>
                                    <p>@_person.Allergies</p>
                                }

                                @if (!string.IsNullOrWhiteSpace(_person.Disabilities))
                                {
                                    <h6>Disabilities / Additional Needs</h6>
                                    <p>@_person.Disabilities</p>
                                }

                                @if (!string.IsNullOrWhiteSpace(_person.Notes))
                                {
                                    <h6>General Notes</h6>
                                    <p class="mb-0">@_person.Notes</p>
                                }
                            </div>
                        </div>
                    }

                    <!-- Photo Permission -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Photo Permission</h5>
                        </div>
                        <div class="card-body">
                            @switch (_person.PhotoPermission)
                            {
                                case PhotoPermission.None:
                                    <span class="badge bg-danger">No Photos</span>
                                    <p class="mb-0 mt-2">Do not take or use photos of this member.</p>
                                    break;
                                case PhotoPermission.UnitOnly:
                                    <span class="badge bg-warning text-dark">Unit Use Only</span>
                                    <p class="mb-0 mt-2">Photos may be used for internal communications and displays only.</p>
                                    break;
                                case PhotoPermission.AllMedia:
                                    <span class="badge bg-success">All Media</span>
                                    <p class="mb-0 mt-2">Photos may be used for social media, publicity, and all purposes.</p>
                                    break;
                            }
                        </div>
                    </div>

                    <!-- Payment History -->
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Payment History</h5>
                            <a href="/Payments/MemberHistory/@_person.MembershipNumber" class="btn btn-sm btn-outline-primary">
                                View Full History
                            </a>
                        </div>
                        <div class="card-body">
                            @if (_paymentSummary == null)
                            {
                                <p class="text-muted mb-0">Loading payment information...</p>
                            }
                            else
                            {
                                <div class="row text-center mb-3">
                                    <div class="col-4">
                                        <h5 class="mb-0 text-success">@_paymentSummary.TotalPaid.ToString("C")</h5>
                                        <small class="text-muted">Total Paid</small>
                                    </div>
                                    <div class="col-4">
                                        <h5 class="mb-0 @(_paymentSummary.TotalOutstanding > 0 ? "text-danger" : "text-success")">
                                            @_paymentSummary.TotalOutstanding.ToString("C")
                                        </h5>
                                        <small class="text-muted">Outstanding</small>
                                    </div>
                                    <div class="col-4">
                                        @if (_paymentSummary.OverduePayments > 0)
                                        {
                                            <h5 class="mb-0 text-danger">@_paymentSummary.OverduePayments</h5>
                                            <small class="text-danger">Overdue</small>
                                        }
                                        else
                                        {
                                            <h5 class="mb-0 text-success"><i class="bi bi-check-circle"></i></h5>
                                            <small class="text-muted">No Overdue</small>
                                        }
                                    </div>
                                </div>
                                @if (_paymentSummary.PendingPayments > 0)
                                {
                                    <a href="/Payments?search=@_person.MembershipNumber" class="btn btn-warning btn-sm">
                                        <i class="bi bi-cash"></i> @_paymentSummary.PendingPayments Pending Payment(s)
                                    </a>
                                }
                                else if (_paymentSummary.TotalPayments == 0)
                                {
                                    <p class="text-muted mb-0">No payment records.</p>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Mark as Left Modal -->
@if (_showMarkAsLeftModal && _person != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mark @_person.FullName as Left</h5>
                    <button type="button" class="btn-close" @onclick="CloseMarkAsLeftModal"></button>
                </div>
                <div class="modal-body">
                    <p>This will remove all personal data for this member while keeping their membership number and historical records (attendance and payments).</p>

                    <div class="mb-3">
                        <label class="form-label">Date Left</label>
                        <input type="date" class="form-control" @bind="_dateLeft" />
                    </div>

                    <div class="alert alert-warning">
                        <strong>⚠️ This action cannot be undone!</strong>
                        <p class="mb-0 mt-2">The following data will be permanently removed:</p>
                        <ul class="mt-2 mb-0">
                            <li>Name, date of birth</li>
                            <li>All emergency contacts</li>
                            <li>Medical information</li>
                            <li>Notes and permissions</li>
                        </ul>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="exportBeforeRemoval" @bind="_exportBeforeRemoval" />
                        <label class="form-check-label" for="exportBeforeRemoval">
                            Export member data before removal (Recommended)
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseMarkAsLeftModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmMarkAsLeft" disabled="@_isProcessing">
                        @if (_isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Processing...</span>
                        }
                        else
                        {
                            <i class="bi bi-trash"></i> <span>Confirm & Remove Data</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}
