@page "/Reports/NightsAway"
@using GUMS.Data.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Nights Away Report - GUMS</PageTitle>

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Nights Away Report</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-moon-stars"></i> Nights Away Report</h2>
            <p class="text-muted mb-0">Track cumulative nights away from multi-day events</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" class="form-control" @bind="_fromDate" @bind:after="LoadData" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" class="form-control" @bind="_toDate" @bind:after="LoadData" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Show</label>
                    <select class="form-select" @bind="_personTypeFilter" @bind:after="LoadData">
                        <option value="">Everyone</option>
                        <option value="Girl">Girls Only</option>
                        <option value="Leader">Leaders Only</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-secondary" @onclick="ClearFilters">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <!-- Summary Stats -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center" style="background-color: #E8F5E9;">
                    <div class="card-body">
                        <h3 class="mb-0 text-success">@_summaries.Sum(s => s.TotalNightsAway)</h3>
                        <small class="text-muted">Total Nights Away</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center" style="background-color: #E3F2FD;">
                    <div class="card-body">
                        <h3 class="mb-0 text-primary">@_summaries.Count</h3>
                        <small class="text-muted">Members with Nights Away</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center" style="background-color: #FFF3E0;">
                    <div class="card-body">
                        <h3 class="mb-0 text-warning">@_summaries.Sum(s => s.MultiDayEventsAttended)</h3>
                        <small class="text-muted">Multi-Day Events Attended</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Table -->
        <div class="card">
            <div class="card-header" style="background-color: var(--gg-primary-blue); color: white;">
                <h5 class="mb-0">
                    <i class="bi bi-table"></i> Nights Away Summary
                </h5>
            </div>
            <div class="card-body p-0">
                @if (!_summaries.Any())
                {
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-moon" style="font-size: 2rem;"></i>
                        <p class="mb-0 mt-2">No nights away recorded for the selected period.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th class="text-center">Multi-Day Events</th>
                                    <th class="text-center">Total Nights</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var summary in _summaries)
                                {
                                    <tr>
                                        <td>
                                            <strong>@(summary.MemberName ?? "Unknown")</strong>
                                            <br />
                                            <small class="text-muted">@summary.MembershipNumber</small>
                                        </td>
                                        <td>
                                            @if (summary.PersonType == "Girl")
                                            {
                                                <span class="badge bg-info">Girl</span>
                                            }
                                            else if (summary.PersonType == "Leader")
                                            {
                                                <span class="badge bg-warning text-dark">Leader</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@summary.PersonType</span>
                                            }
                                        </td>
                                        <td class="text-center">@summary.MultiDayEventsAttended</td>
                                        <td class="text-center">
                                            <strong class="text-success">@summary.TotalNightsAway</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="2">Total</th>
                                    <th class="text-center">@_summaries.Sum(s => s.MultiDayEventsAttended)</th>
                                    <th class="text-center text-success">@_summaries.Sum(s => s.TotalNightsAway)</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>
