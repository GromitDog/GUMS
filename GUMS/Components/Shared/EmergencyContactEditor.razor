@using GUMS.Data.Entities

<div class="emergency-contacts-editor">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5>Emergency Contacts</h5>
        <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddContact">
            <i class="bi bi-plus-circle"></i> Add Contact
        </button>
    </div>

    @if (Contacts == null || !Contacts.Any())
    {
        <p class="text-muted">No emergency contacts added yet. Click "Add Contact" to add one.</p>
    }
    else
    {
        @foreach (var contact in Contacts.OrderBy(c => c.SortOrder))
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h6 class="card-title mb-0">Contact @(Contacts.IndexOf(contact) + 1)</h6>
                        <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => RemoveContact(contact)">
                            <i class="bi bi-x-lg"></i> Remove
                        </button>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Contact Name *</label>
                            <InputText class="form-control" @bind-Value="contact.ContactName" placeholder="Jane Smith" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Relationship *</label>
                            <InputText class="form-control" @bind-Value="contact.Relationship" placeholder="Mother" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Primary Phone *</label>
                            <InputText class="form-control" @bind-Value="contact.PrimaryPhone" placeholder="07123 456789" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Secondary Phone</label>
                            <InputText class="form-control" @bind-Value="contact.SecondaryPhone" placeholder="01234 567890" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email</label>
                            <InputText class="form-control" type="email" @bind-Value="contact.Email" placeholder="jane.smith@example.com" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Notes</label>
                            <InputText class="form-control" @bind-Value="contact.Notes" placeholder="e.g., Lives with Mon-Wed" />
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    @if (Contacts != null && Contacts.Count > 1)
    {
        <p class="text-muted small">
            <i class="bi bi-info-circle"></i> For split families, all emergency contacts' emails will be included in communications.
        </p>
    }
</div>
